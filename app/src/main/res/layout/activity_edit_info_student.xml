<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBottomNavigation">

            <ImageButton
                android:id="@+id/ibtn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cập nhật tài khoản"
                android:textColor="@color/color_White"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:id="@+id/btn_update_account"
                android:layout_marginEnd="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Cập nhật"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_name_update_student"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_edittext_comment_news"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:hint="Họ và tên" />

                <EditText
                    android:id="@+id/edt_email_update_student"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_edittext_comment_news"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:hint="Email" />

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_age_update_student"
                        android:layout_weight="3"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:background="@drawable/bg_edittext_comment_news"
                        android:text=""
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:hint="Tuổi"
                        android:inputType="number"/>

                    <EditText
                        android:id="@+id/edt_sex_update_student"
                        android:layout_weight="3"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edittext_comment_news"
                        android:text=""
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:hint="Giới tính" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:layout_weight="5"
                        android:id="@+id/txt_date_update_student"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edittext_comment_news"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:hint="Ngày sinh" />

                    <EditText
                        android:layout_weight="5"
                        android:id="@+id/edt_phone_update_student"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edittext_comment_news"
                        android:text=""
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:hint="Số điện thoại"
                        android:inputType="number"
                        tools:ignore="TextFields" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_address_update_student"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_edittext_comment_news"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:singleLine="true"
                    android:hint="Địa chỉ" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_progress_bar"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/color_gray_opacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

</RelativeLayout>