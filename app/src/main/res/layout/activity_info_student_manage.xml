<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoStudentManageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBottomNavigation">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông tin học sinh"
            android:textColor="@color/color_White"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_option_manage"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Họ và tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Tuổi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_age"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Giới tính"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_sex"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Ngày sinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_birthday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Số điện thoại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_phone"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/custom_border_bottom_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:clickable="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_gray"
                android:text="Quê quán"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_address"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>