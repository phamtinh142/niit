<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.fragment.Profile.ProfileFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:clickable="false"
            android:layout_margin="10dp"
            android:src="@drawable/avatar_test"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:clickable="false"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Phạm Xuân Tình"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:text="Chuyên cần"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:text="Thông tin"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnhocphi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Học phí"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnthoikhoabieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời khóa biểu"
        android:textSize="25dp"
        android:textStyle="bold" />
</LinearLayout>