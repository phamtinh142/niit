<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.activity.ScheludeManage.ScheludeManageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBottomNavigation">

        <ImageButton
            android:id="@+id/ibtn_back_create_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tạo thời khóa biểu"
            android:textColor="@color/color_White"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/btn_create_schelude_manage"
            android:layout_marginEnd="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Tạo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RadioGroup
        android:weightSum="302"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioButton
            android:checked="true"
            android:background="@drawable/change_color_rdo_login"
            android:id="@+id/rdo_cp13_schelude_manage"
            android:textColor="@drawable/change_text_rdo_login"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="100"
            android:text="CP13"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/color_title_icon_fragment_bet"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_width="0.1dp" />

        <RadioButton
            android:background="@drawable/change_color_rdo_login"
            android:id="@+id/rdo_cp14_schelude_manage"
            android:textColor="@drawable/change_text_rdo_login"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="100"
            android:text="CP14"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/color_title_icon_fragment_bet"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_width="0.1dp" />

        <RadioButton
            android:background="@drawable/change_color_rdo_login"
            android:id="@+id/rdo_cp15_schelude_manage"
            android:textColor="@drawable/change_text_rdo_login"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="100"
            android:text="CP15"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rllbarLichHoc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rrthu2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#5d92e1">

                    <TextView
                        android:id="@+id/txtthu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Thứ"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/so2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtthu2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="2"
                        android:textSize="50dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ScrollView
                    android:layout_toEndOf="@+id/rrthu2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/scrollView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    tools:ignore="UselessParent">

                    <EditText
                        android:id="@+id/edt_thu2_schelude_manage"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical"
                        android:hint="Nhập nội dung"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
