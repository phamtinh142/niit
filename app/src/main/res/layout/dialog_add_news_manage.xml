<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBottomNavigation">

            <ImageView
                android:id="@+id/btn_back_add_news_manage"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

            <TextView
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Tạo Bài Viết"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:id="@+id/btn_confirm_news_manage"
                android:layout_marginEnd="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Đăng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RadioGroup
            android:weightSum="302"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RadioButton
                android:checked="true"
                android:background="@drawable/change_color_rdo_login"
                android:id="@+id/rdo_cp13_add_news_manage"
                android:textColor="@drawable/change_text_rdo_login"
                android:gravity="center"
                android:button="@null"
                android:layout_weight="100"
                android:text="CP13"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_title_icon_fragment_bet"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_width="0.1dp" />

            <RadioButton
                android:background="@drawable/change_color_rdo_login"
                android:id="@+id/rdo_cp14_add_news_manage"
                android:textColor="@drawable/change_text_rdo_login"
                android:gravity="center"
                android:button="@null"
                android:layout_weight="100"
                android:text="CP14"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_gravity="center_vertical"
                android:background="@color/color_title_icon_fragment_bet"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_width="0.1dp" />

            <RadioButton
                android:background="@drawable/change_color_rdo_login"
                android:id="@+id/rdo_cp15_add_news_manage"
                android:textColor="@drawable/change_text_rdo_login"
                android:gravity="center"
                android:button="@null"
                android:layout_weight="100"
                android:text="CP15"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp">

                    <ScrollView
                        android:layout_marginTop="10dp"
                        android:id="@+id/scrollView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        tools:ignore="UselessParent">

                        <EditText
                            android:id="@+id/txt_content_add_news_manage"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:hint="Nhập nội dung"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </ScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:background="@color/color_white"
                    android:visibility="gone"
                    android:id="@+id/layout_image_news_manage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/img_add_news_manage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/btn_close_image_manage"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_close_black_24dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </RelativeLayout>



                <LinearLayout
                    android:background="@color/color_white"
                    android:layout_marginTop="20dp"
                    android:id="@+id/layout_add_image_manage"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:clickable="false"
                        android:src="@drawable/ic_add_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/label_choose_image_manage"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:text="Thêm Ảnh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_progress_bar_add_news_manage"
        android:gravity="center"
        android:background="@color/color_gray_opacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>


</RelativeLayout>