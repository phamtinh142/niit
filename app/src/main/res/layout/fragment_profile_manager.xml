<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/image_wall"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <RelativeLayout
                android:layout_marginStart="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_login"
                    android:id="@+id/img_profile_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/user_profile_image_background"
                    android:elevation="4dp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_profile_avatar"
                    android:layout_centerVertical="true"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:id="@+id/txt_username_profile"
                    android:textStyle="bold"
                    android:textColor="@color/color_Black"
                    android:text="User Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_option_manage"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rtl_student_manage"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_gray"
                        android:text="Quản lí sinh viên"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rtl_schelude_manage"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_gray"
                        android:text="Quản lí thời khóa biểu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rtl_create_student_account"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_gray"
                        android:text="Tạo tài khoản sinh viên"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rtl_subject"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_gray"
                        android:text="Quản lí môn học"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rtl_change_password"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_gray"
                        android:text="Đổi mật khẩu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_logout_manager"
                    android:padding="3dp"
                    android:background="@drawable/custom_border_bottom_layout"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:clickable="false"
                        android:scaleType="fitXY"
                        android:background="@color/color_white"
                        android:src="@drawable/ic_log_out"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:clickable="false"
                        android:text="Log out"
                        android:textColor="@color/colorBottomNavigation"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_loading"
        android:gravity="center"
        android:background="@color/color_gray_opacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

</RelativeLayout>